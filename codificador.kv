<CodificadorLayout>:
    orientation: "vertical"
    spacing: 30
    padding: 40

    # Entrada de texto
    TextInput:
        id: entrada
        text: root.input_text
        on_text: root.input_text = self.text
        hint_text: "Escreve o texto aqui..."
        size_hint_y: 0.4
        font_size: "40sp"
        multiline: True

    # Botões
    BoxLayout:
        size_hint_y: 0.2
        spacing: 40

        Button:
            text: "CODE"
            font_size: "40sp"
            size_hint: 0.5, 1
            on_release: root.code_text()

        Button:
            text: "UNCODE"
            font_size: "40sp"
            size_hint: 0.5, 1
            on_release: root.uncode_text()

    # Saída (somente leitura)
    TextInput:
        id: saida
        text: root.output_text
        readonly: True
        font_size: "40sp"
        background_color: (0.95, 0.95, 0.95, 1)
        foreground_color: (0, 0, 0, 1)
        size_hint_y: 0.4
        multiline: True
