BoxLayout:
    orientation: "vertical"
    padding: 20
    spacing: 20
    canvas.before:
        Color:
            rgba: 0.96, 0.96, 0.96, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "üîê Codificador de Texto"
        font_size: 28
        bold: True
        size_hint_y: None
        height: 60
        color: 0.1, 0.1, 0.1, 1

    # Caixa de entrada
    TextInput:
        id: entrada
        hint_text: "‚úèÔ∏è Escreve o texto aqui..."
        size_hint_y: 0.4
        multiline: True
        background_color: (1, 1, 1, 1)
        foreground_color: (0, 0, 0, 1)
        padding: [15, 15, 15, 15]
        font_size: 18
        background_normal: ''
        background_active: ''
        cursor_color: (0, 0, 0, 1)
        # Removido canvas arredondado para n√£o bloquear o toque

    BoxLayout:
        size_hint_y: None
        height: 70  # Aumentado
        spacing: 20
        padding: [0, 0]

        Button:
            text: "Codificar"
            font_size: 20
            background_normal: ''
            background_color: (0.2, 0.6, 1, 1)
            color: (1, 1, 1, 1)
            on_press: app.codificar_texto()

        Button:
            text: "Decodificar"
            font_size: 20
            background_normal: ''
            background_color: (0.1, 0.8, 0.4, 1)
            color: (1, 1, 1, 1)
            on_press: app.decodificar_texto()

    Label:
        text: "üìú Resultado:"
        size_hint_y: None
        height: 30
        font_size: 20
        color: 0.1, 0.1, 0.1, 1

    # Caixa de resultado (s√≥ leitura)
    TextInput:
        id: resultado
        readonly: True
        multiline: True
        size_hint_y: 0.4
        background_color: (1, 1, 1, 1)
        foreground_color: (0, 0, 0, 1)
        cursor_color: (0, 0, 0, 0)
        padding: [15, 15, 15, 15]
        font_size: 18
        background_normal: ''
        background_active: ''
        hint_text: "O texto codificado/decodificado aparecer√° aqui..."
        on_touch_down:
            if self.collide_point(*args[1].pos): app.copiar_resultado(self.text)
