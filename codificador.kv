BoxLayout:
    orientation: "vertical"
    padding: 20
    spacing: 25
    canvas.before:
        Color:
            rgba: 0.96, 0.96, 0.96, 1
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text: "üîê Codificador de Texto"
        font_size: 32
        bold: True
        size_hint_y: None
        height: 70
        color: 0.1, 0.1, 0.1, 1

    # Caixa de entrada de texto
    TextInput:
        id: entrada
        hint_text: "‚úèÔ∏è Escreve o texto aqui..."
        size_hint_y: 0.4
        multiline: True
        background_color: (1, 1, 1, 1)
        foreground_color: (0, 0, 0, 1)
        font_size: 22
        padding: [20, 20, 20, 20]
        background_normal: ''
        background_active: ''
        cursor_color: (0, 0, 0, 1)

    BoxLayout:
        size_hint_y: None
        height: 90  # Bot√µes grandes
        spacing: 25
        padding: [0, 0]

        Button:
            text: "Codificar"
            font_size: 24
            bold: True
            background_normal: ''
            background_color: (0.15, 0.5, 1, 1)
            color: (1, 1, 1, 1)
            on_press: app.codificar_texto()

        Button:
            text: "Decodificar"
            font_size: 24
            bold: True
            background_normal: ''
            background_color: (0.15, 0.8, 0.4, 1)
            color: (1, 1, 1, 1)
            on_press: app.decodificar_texto()

    Label:
        text: "üìú Resultado:"
        size_hint_y: None
        height: 40
        font_size: 24
        color: 0.1, 0.1, 0.1, 1

    # Caixa de sa√≠da (s√≥ leitura)
    TextInput:
        id: resultado
        readonly: True
        multiline: True
        size_hint_y: 0.4
        background_color: (1, 1, 1, 1)
        foreground_color: (0, 0, 0, 1)
        font_size: 22
        padding: [20, 20, 20, 20]
        background_normal: ''
        background_active: ''
        cursor_color: (0, 0, 0, 0)
        hint_text: "O texto codificado/decodificado aparecer√° aqui..."
        on_touch_down:
            if self.collide_point(*args[1].pos): app.copiar_resultado(self.text)
